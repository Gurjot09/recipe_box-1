- if params[:other_params].blank?
	.main_content
		#recipe_top.row
			.col-md-4
				= image_tag @recipe.image.url(:medium), class: "recipe_image"
			.col-md-8
				#recipe_info
					%h1= @recipe.title
					%p.description= @recipe.description

		.row
			.col-md-6
				#ingredients
					%h2 Ingredients
					%ul
						- @recipe.ingredients.each do |ingredient|
			
							%li= link_to ingredient.name, recipe_path(other_params: ingredient.id)
			.col-md-6
				#directions
					%h2 Directions
					%ul
						- @recipe.ingredients.each do |ingredient|
							- ingredient.directions.each_with_index do |direction, i|
								- if i == 0
									%li= direction.name

		.row
			.col-md-12
				= link_to "Back", root_path, class: "btn btn-default"
				= link_to "Edit", edit_recipe_path, class: "btn btn-default"
				= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default"
